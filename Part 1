function doStep1(init, callback) { /* init is the starting value for this, so 
                                it could be any number that is passed into the function.*/
    const result = init + 1;
    callback(result); /*Callback function is used in order to
                        pass the result of the function to the other steps*/
  }
  
  function doStep2(init, callback) {
    const result = init + 2;
    callback(result);
  }
  
  function doStep3(init, callback) {
    const result = init + 3;
    callback(result);
  }
  
  function doOperation() {
    doStep1(0, (result1) => {
      doStep2(result1, (result2) => {
        doStep3(result2, (result3) => {
          console.log(`result: ${result3}`);
        });
      });
    });
  }
  
  doOperation();